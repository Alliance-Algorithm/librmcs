{
    "version": 2,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "debug",
            "inherits": "base",
            "cacheVariables": {
                "HOST_DEBUGGER": "OFF",
                "CMAKE_BUILD_TYPE": "debug"
            }
        },
        {
            "name": "debug-outside",
            "inherits": "base",
            "cacheVariables": {
                "HOST_DEBUGGER": "ON",
                "CMAKE_BUILD_TYPE": "debug"
            }
        },
        {
            "name": "release",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "release"
            }
        }
    ]
}
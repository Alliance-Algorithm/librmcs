{
    "version": 4,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "toolchainFile": "${sourceDir}/cubemx/cmake/gcc-arm-none-eabi.cmake"
        },
        {
            "name": "debug",
            "inherits": "base",
            "cacheVariables": {
                "HOST_DEBUGGER": "OFF",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "debug-outside",
            "inherits": "base",
            "cacheVariables": {
                "HOST_DEBUGGER": "ON",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}
